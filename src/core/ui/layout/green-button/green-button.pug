mixin svgClose(name)
  svg(class="icon-" +name width="18" height="18" viewBox="0 0 18 18" aria-hidden="true")
    use(href="./assets/icons/default/sprite.svg#" + name)

mixin green-button (text) 
  .green-button 
    label.green-button_label= text 
    button.green-button_close
      +svgClose("Cancel")