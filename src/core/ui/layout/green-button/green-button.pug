mixin svgClose(name)
  svg(class="icon-" +name width="18" height="18" viewBox="0 0 18 18" aria-hidden="true")
    use(href="./assets/icons/default/sprite.svg#" + name)

mixin green-button(text, options)
  - const buttonText = typeof options === 'string' ? options : options?.text;
  - const buttonId = typeof options === 'object' && 'el'+options?.text.replace(/\s/g, "");
  
  .green-button 
    label.green-button_label= text 
    button.green-button__close
        +svgClose("Cancel").svg-icon-close 