mixin svgCheck(name)
  svg(class="icon-" +name width="15" height="15" viewBox="0 0 15 15" aria-hidden="true")
    use(href="./assets/icons/default/sprite.svg#" + name)

mixin checkbox(props)
  -
    const checked = props.checked || false;

  label.checkbox&attributes(attributes)
    input.checkbox__input(
      type='checkbox'
      id='el'+props.label.replace(/\s/g, "")
      name=props.name
      value=props.value
      required=props.required
      checked=checked
    )
    span.checkbox__box
      span.checkbox__box-border
      .checkbox__icon
        +svgCheck('checkmark')

    if props.label
      span.checkbox__text= props.label